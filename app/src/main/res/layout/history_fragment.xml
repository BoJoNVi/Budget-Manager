<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/historyFragmentLayoutTab"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/burlywood"
    tools:context=".HistoryFragment">

    <!-- Add LinearLayout nor ConstraintLayout in Between para ma-adjust2x-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewSampleHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/design_default_color_primary_variant"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="HISTORY FRAGMENT LIST\nwill be displayed here"
            android:textColor="@color/bluish"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewSampleDismissHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/design_default_color_primary_variant"
            android:padding="10dp"
            android:text="Tap this to dismiss temporarily"
            android:textColor="@color/goldenrod"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>


</FrameLayout>