<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/budgetListFragmentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".BudgetListFragment">

    <!-- Add LinearLayout nor ConstraintLayout in Between para ma-adjust2x-->
    <LinearLayout
        android:id="@+id/budgetListLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewSampleDismiss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/card_background"
            android:fontFamily="@font/ubuntu"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="To center this Budget card, follow the format of this TextView in xml file"
            android:textColor="@color/screenBackground"
            android:textSize="18sp" />


    </LinearLayout>


</FrameLayout>