<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/budgetListFragmentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    tools:context=".BudgetListFragment">

    <!-- Add LinearLayout nor ConstraintLayout in Between para ma-adjust2x-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewSampleDismiss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/lawngreen"
            android:padding="10dp"
            android:text="Tap this to dismiss temporarily"
            android:textColor="@color/goldenrod"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>


</FrameLayout>